<div id="account-div">
<% if (title) { %>
    <h1 id="account-h"><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
 
    <%- messages() %>

    <% if (errors) { %>
      <ul class="notice2">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %>
    <!-- What I did to solve this issue was to change the action route to be the same as the route of the page where the 
     form is being display inv/newClass, but why then the registerAcc worked?-->
    <div class="login-container">
      <form action="/inv/newClass" method="POST">
        <fieldset>
        <legend>Field is required</legend>
        <label>Classification Name:<input type="text" name="classification_name" id="newClassification" required pattern="^[a-zA-Z0-9]+$" title="Name must contain only alphanumeric characters." value="<%= locals.account_firstname %>"/></label>
        <span id="pass-msg">NAME MUST BE ALPHABETIC CHARACTERS ONLY</span>
      </fieldset>
      <button type="submit">Add Classification</button>
      </form>
    </div>
  </div>