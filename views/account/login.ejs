<div id="account-div">
    <% if (title) { %>
        
        <h1 id="account-h"><%= title %></h1>
        <% } else {
          res.redirect('/')
        } %>

        <%- messages() %>

        <% if (errors) { %>
            <ul class="notice2">
           <% errors.array().forEach(error => { %>
             <li><%= error.msg %></li>
          <%  }) %>
           </ul>
          <% } %>
        <div class="login-container">
            <form action="/account/login" method="POST">
                <label>Email:<input type="email" name="account_email" placeholder="Enter a valid address" required></label>
                <label>Password:<div class="password-container">
                    <input type="password" name="account_password" id="pword" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required />
                    <span id="pswdBtn">üëÅÔ∏è</span>
                  </div>
                <span id="pass-msg">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span> 
                <button type="submit">Login</button>
            </form>
            <div class="regiter-box">No account? <a href="/account/register">Sign-up</a></div>
        </div>
    </div>

    <script>
        const pswdBtn = document.querySelector("#pswdBtn");
        pswdBtn.addEventListener("click", function () {
          const pswdInput = document.getElementById("pword");
          const type = pswdInput.getAttribute("type");
          if (type == "password") {
            pswdInput.setAttribute("type", "text");
            pswdBtn.innerHTML = "‚õî";
          } else {
            pswdInput.setAttribute("type", "password");
            pswdBtn.innerHTML = "üëÅÔ∏è";
          }
        });
      </script>